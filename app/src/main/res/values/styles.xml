<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- CUSTOM STYLES -->
    <style name="DarkGreen" parent="AppTheme">
        <item name="android:background">@color/black</item>

        <item name="android:textColor">@color/light_green</item>
        <item name="android:textColorHint">@color/shadow_green</item>
        <item name="android:textColorPrimary">@color/light_green</item>
        <item name="android:textColorSecondary">@color/light_green</item>
        <item name="android:textColorTertiary">@color/light_green</item>
        <item name="android:editTextColor">@color/light_green</item>

        <item name="colorControlNormal">@color/shadow_green</item>
        <item name="colorControlActivated">@color/light_green</item>
        <item name="colorControlHighlight">@color/green</item>

        <item name="colorAccent">@color/red</item>

        <item name="colorPrimaryDark">@color/green</item>
    </style>

    <style name="DarkGreen.Button">
        <item name="android:background">@drawable/button_darkgreen_noaction</item>
    </style>

</resources>
